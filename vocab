        // ===============================
        // UTILITY FUNCTIONS
        // ===============================

        // Cookie management
        function setCookie(name, value, days) {
            let expires = "";
            if (days) {
                const date = new Date();
                date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
                expires = "; expires=" + date.toUTCString();
            }
            document.cookie = name + "=" + (value || "") + expires + "; path=/";
        }

        function getCookie(name) {
            const nameEQ = name + "=";
            const ca = document.cookie.split(';');
            for (let i = 0; i < ca.length; i++) {
                let c = ca[i];
                while (c.charAt(0) === ' ') c = c.substring(1, c.length);
                if (c.indexOf(nameEQ) === 0) return c.substring(nameEQ.length, c.length);
            }
            return null;
        }

        // Save and load user data
        function saveUserData() {
            setCookie('pflegeUser', JSON.stringify(user), 30);
        }

        function loadUserData() {
            const userData = getCookie('pflegeUser');
            if (userData) {
                user = JSON.parse(userData);
            }
            updateUserStats();
        }

        // Update UI with user stats
        function updateUserStats() {
            document.getElementById('coins').textContent = user.coins;
            document.getElementById('level').textContent = user.level;
            document.getElementById('xp').textContent = user.xp;
        }

        // Calculate level based on XP
        function calculateLevel() {
            const newLevel = Math.floor(user.xp / 100) + 1;
            if (newLevel > user.level) {
                user.level = newLevel;
                // Level up celebration could be added here
            }
        }

        // Add XP and coins with animation
        function addReward(coins, xp) {
            user.coins += coins;
            user.xp += xp;
            calculateLevel();
            updateUserStats();
            saveUserData();
            
            // Visual feedback for rewards
            if (coins > 0 || xp > 0) {
                // Could add animation here
            }
        }

        // Shuffle array (Fisher-Yates algorithm)
        function shuffleArray(array) {
            for (let i = array.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [array[i], array[j]] = [array[j], array[i]];
            }
            return array;
        }

        // Show confetti animation
        function showConfetti() {
            confetti({
                particleCount: 150,
                spread: 70,
                origin: { y: 0.6 }
            });
        }

        // ===============================
        // DASHBOARD FUNCTIONALITY
        // ===============================

        let currentCategory = '';

        function initializeDashboard() {
            loadUserData();
            renderCategories();
            
            // Event listeners for navigation
            document.getElementById('start-learning').addEventListener('click', showDashboard);
            document.getElementById('back-to-categories').addEventListener('click', showDashboard);
            
            // Event listener for game selection
            const gameCards = document.querySelectorAll('.game-card');
            gameCards.forEach(card => {
                card.addEventListener('click', function() {
                    const game = this.getAttribute('data-game');
                    startGame(game);
                });
            });
            
            // Event listeners for back buttons in games
            document.getElementById('back-to-games-flashcards').addEventListener('click', showGameSelection);
            document.getElementById('back-to-games-memory').addEventListener('click', showGameSelection);
            document.getElementById('back-to-games-quiz').addEventListener('click', showGameSelection);
            
            // Event listeners for restart and back buttons in results
            document.getElementById('flashcard-restart').addEventListener('click', () => startGame('flashcards'));
            document.getElementById('flashcard-back-to-games').addEventListener('click', showGameSelection);
            document.getElementById('memory-restart').addEventListener('click', () => startGame('memory'));
            document.getElementById('memory-back-to-games').addEventListener('click', showGameSelection);
            document.getElementById('quiz-restart').addEventListener('click', () => startGame('quiz'));
            document.getElementById('quiz-back-to-games').addEventListener('click', showGameSelection);
        }

        function renderCategories() {
            const grid = document.getElementById('categories-grid');
            grid.innerHTML = '';
            
            for (const [categoryName, categoryData] of Object.entries(categories)) {
                const isUnlocked = user.unlockedCategories.includes(categoryName);
                const progress = calculateCategoryProgress(categoryName);
                
                const card = document.createElement('div');
                card.className = `category-card ${isUnlocked ? '' : 'locked'}`;
                card.style.borderLeftColor = categoryData.color;
                
                card.innerHTML = `
                    <div class="category-header">
                        <div class="category-icon" style="background: ${categoryData.color}20; color: ${categoryData.color}">
                            <i class="${categoryData.icon}"></i>
                        </div>
                        ${!isUnlocked ? `
                        <div class="category-cost">
                            <i class="fas fa-coins"></i>
                            <span>${categoryData.cost}</span>
                        </div>
                        ` : ''}
                    </div>
                    <h3 class="category-title">${categoryName}</h3>
                    <p class="category-description">${categoryData.vocabulary.length} Fachwörter zum Lernen</p>
                    <div class="category-stats">
                        <div class="stat">
                            <span class="stat-value">${progress}%</span>
                            <span class="stat-label">Fortschritt</span>
                        </div>
                        <div class="stat">
                            <span class="stat-value">${categoryData.vocabulary.length}</span>
                            <span class="stat-label">Wörter</span>
                        </div>
                    </div>
                    <button class="category-action ${isUnlocked ? 'start' : 'unlock'}" 
                            data-category="${categoryName}">
                        <i class="fas fa-${isUnlocked ? 'play' : 'lock'}"></i>
                        ${isUnlocked ? 'Kategorie öffnen' : 'Freischalten'}
                    </button>
                `;
                
                grid.appendChild(card);
            }
            
            // Add event listeners to category buttons
            const unlockButtons = document.querySelectorAll('.category-action.unlock');
            unlockButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const category = this.getAttribute('data-category');
                    unlockCategory(category);
                });
            });
            
            const startButtons = document.querySelectorAll('.category-action.start');
            startButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const category = this.getAttribute('data-category');
                    selectCategory(category);
                });
            });
        }

        function calculateCategoryProgress(categoryName) {
            if (!user.progress[categoryName]) return 0;
            
            const progress = user.progress[categoryName];
            const totalGames = 3; // flashcards, memory, quiz
            let completedGames = 0;
            
            if (progress.flashcards && progress.flashcards.completed) completedGames++;
            if (progress.memory && progress.memory.completed) completedGames++;
            if (progress.quiz && progress.quiz.completed) completedGames++;
            
            return Math.round((completedGames / totalGames) * 100);
        }

        function unlockCategory(categoryName) {
            const category = categories[categoryName];
            if (user.coins >= category.cost) {
                user.coins -= category.cost;
                user.unlockedCategories.push(categoryName);
                saveUserData();
                updateUserStats();
                renderCategories();
                
                // Show success message
                alert(`Glückwunsch! Du hast die Kategorie "${categoryName}" freigeschaltet.`);
            } else {
                alert(`Du hast nicht genug Coins. Du benötigst ${category.cost} Coins.`);
            }
        }

        function selectCategory(categoryName) {
            currentCategory = categoryName;
            updateGameSelectionProgress();
            showGameSelection();
        }

        // ===============================
        // NAVIGATION
        // ===============================

        function showDashboard() {
            document.getElementById('dashboard').style.display = 'block';
            document.getElementById('game-selection').classList.remove('active');
            document.getElementById('flashcard-game').classList.remove('active');
            document.getElementById('memory-game').classList.remove('active');
            document.getElementById('quiz-game').classList.remove('active');
        }

        function showGameSelection() {
            document.getElementById('dashboard').style.display = 'none';
            document.getElementById('game-selection').classList.add('active');
            document.getElementById('flashcard-game').classList.remove('active');
            document.getElementById('memory-game').classList.remove('active');
            document.getElementById('quiz-game').classList.remove('active');
            
            document.getElementById('game-selection-title').textContent = `Spielmodi - ${currentCategory}`;
            updateGameSelectionProgress();
        }

        function updateGameSelectionProgress() {
            const progress = user.progress[currentCategory] || {};
            
            const flashcardsProgress = progress.flashcards ? 
                Math.round((progress.flashcards.correct / categories[currentCategory].vocabulary.length) * 100) : 0;
            const memoryProgress = progress.memory && progress.memory.completed ? 100 : 0;
            const quizProgress = progress.quiz ? 
                Math.round((progress.quiz.correct / progress.quiz.total) * 100) : 0;
            
            document.getElementById('flashcards-progress').textContent = `${flashcardsProgress}%`;
            document.getElementById('memory-progress').textContent = `${memoryProgress}%`;
            document.getElementById('quiz-progress').textContent = `${quizProgress}%`;
        }

        function startGame(gameType) {
            document.getElementById('dashboard').style.display = 'none';
            document.getElementById('game-selection').classList.remove('active');
            document.getElementById('flashcard-game').classList.remove('active');
            document.getElementById('memory-game').classList.remove('active');
            document.getElementById('quiz-game').classList.remove('active');
            
            switch(gameType) {
                case 'flashcards':
                    initializeFlashcards();
                    document.getElementById('flashcard-game').classList.add('active');
                    break;
                case 'memory':
                    initializeMemoryGame();
                    document.getElementById('memory-game').classList.add('active');
                    break;
                case 'quiz':
                    initializeQuizGame();
                    document.getElementById('quiz-game').classList.add('active');
                    break;
            }
        }

        // ===============================
        // FLASHCARD GAME
        // ===============================

        let flashcardIndex = 0;
        let flashcardCorrect = 0;
        let flashcardIncorrect = 0;
        let flashcardDeck = [];

        function initializeFlashcards() {
            document.getElementById('flashcard-results').classList.remove('active');
            
            // Set category title
            document.getElementById('flashcard-category-title').textContent = `Karteikarten - ${currentCategory}`;
            document.getElementById('flashcard-front-category').textContent = currentCategory;
            document.getElementById('flashcard-back-category').textContent = currentCategory;
            
            // Reset stats
            flashcardIndex = 0;
            flashcardCorrect = 0;
            flashcardIncorrect = 0;
            
            // Create shuffled deck
            flashcardDeck = shuffleArray([...categories[currentCategory].vocabulary]);
            
            // Update UI
            updateFlashcardStats();
            loadFlashcard();
            
            // Add event listeners
            document.getElementById('flashcard').addEventListener('click', flipFlashcard);
            document.getElementById('btn-difficult').addEventListener('click', () => rateFlashcard('difficult'));
            document.getElementById('btn-medium').addEventListener('click', () => rateFlashcard('medium'));
            document.getElementById('btn-easy').addEventListener('click', () => rateFlashcard('easy'));
        }

        function flipFlashcard() {
            document.getElementById('flashcard').classList.toggle('flipped');
        }

        function loadFlashcard() {
            const card = flashcardDeck[flashcardIndex];
            document.getElementById('flashcard-term').textContent = card.term;
            document.getElementById('flashcard-definition').textContent = card.definition;
            document.getElementById('flashcard-example').textContent = card.example;
            document.getElementById('flashcard').classList.remove('flipped');
        }

        function updateFlashcardStats() {
            document.getElementById('flashcard-progress').textContent = `${flashcardIndex + 1}/${flashcardDeck.length}`;
            document.getElementById('flashcard-correct').textContent = flashcardCorrect;
            document.getElementById('flashcard-incorrect').textContent = flashcardIncorrect;
        }

        function rateFlashcard(difficulty) {
            // Update stats based on difficulty
            if (difficulty === 'easy') {
                flashcardCorrect++;
            } else if (difficulty === 'difficult') {
                flashcardIncorrect++;
                // Add card to the end of the deck for repetition
                flashcardDeck.push(flashcardDeck[flashcardIndex]);
            }
            // Medium doesn't affect stats
            
            // Move to next card
            flashcardIndex++;
            
            if (flashcardIndex < flashcardDeck.length) {
                loadFlashcard();
                updateFlashcardStats();
            } else {
                finishFlashcards();
            }
        }

        function finishFlashcards() {
            // Calculate score and rewards
            const score = Math.round((flashcardCorrect / flashcardDeck.length) * 100);
            const coinsReward = Math.max(10, Math.floor(score / 10));
            const xpReward = Math.max(20, Math.floor(score / 5));
            
            // Update UI
            document.getElementById('flashcard-final-score').textContent = `${score}%`;
            document.getElementById('flashcard-final-score').className = `result-score ${
                score >= 80 ? 'good' : score >= 60 ? 'average' : 'poor'
            }`;
            document.getElementById('flashcard-coins-reward').textContent = `+${coinsReward}`;
            document.getElementById('flashcard-xp-reward').textContent = `+${xpReward}`;
            
            // Show results
            document.getElementById('flashcard-results').classList.add('active');
            
            // Update user progress
            if (!user.progress[currentCategory]) {
                user.progress[currentCategory] = {};
            }
            user.progress[currentCategory].flashcards = {
                completed: true,
                correct: flashcardCorrect,
                total: flashcardDeck.length,
                score: score
            };
            
            // Add rewards
            addReward(coinsReward, xpReward);
            
            // Show confetti for good scores
            if (score >= 80) {
                showConfetti();
            }
        }

        // ===============================
        // MEMORY GAME
        // ===============================

        let memoryCards = [];
        let flippedCards = [];
        let matchedPairs = 0;
        let memoryMoves = 0;

        function initializeMemoryGame() {
            document.getElementById('memory-results').classList.remove('active');
            
            // Set category title
            document.getElementById('memory-category-title').textContent = `Memory - ${currentCategory}`;
            
            // Reset stats
            flippedCards = [];
            matchedPairs = 0;
            memoryMoves = 0;
            
            // Create card pairs
            memoryCards = [];
            const vocabulary = categories[currentCategory].vocabulary;
            
            // Use first 8 terms for memory game (16 cards)
            const gameVocabulary = vocabulary.slice(0, 8);
            
            gameVocabulary.forEach((item, index) => {
                // Term card
                memoryCards.push({
                    id: index,
                    type: 'term',
                    content: item.term,
                    matched: false
                });
                
                // Definition card
                memoryCards.push({
                    id: index,
                    type: 'definition',
                    content: item.definition,
                    matched: false
                });
            });
            
            // Shuffle cards
            memoryCards = shuffleArray(memoryCards);
            
            // Render cards
            renderMemoryCards();
            updateMemoryStats();
        }

        function renderMemoryCards() {
            const grid = document.getElementById('memory-grid');
            grid.innerHTML = '';
            
            memoryCards.forEach((card, index) => {
                const cardElement = document.createElement('div');
                cardElement.className = 'memory-card';
                if (card.matched) cardElement.classList.add('matched');
                cardElement.setAttribute('data-index', index);
                
                cardElement.innerHTML = `
                    <div class="memory-card-front">
                        <i class="fas fa-question"></i>
                    </div>
                    <div class="memory-card-back">
                        ${card.content}
                    </div>
                `;
                
                cardElement.addEventListener('click', () => flipMemoryCard(index));
                grid.appendChild(cardElement);
            });
        }

        function flipMemoryCard(index) {
            const card = memoryCards[index];
            const cardElement = document.querySelector(`.memory-card[data-index="${index}"]`);
            
            // Ignore if card is already flipped, matched, or two cards are already flipped
            if (card.matched || cardElement.classList.contains('flipped') || flippedCards.length >= 2) {
                return;
            }
            
            // Flip the card
            cardElement.classList.add('flipped');
            flippedCards.push({ index, card });
            
            // Check for match if two cards are flipped
            if (flippedCards.length === 2) {
                memoryMoves++;
                updateMemoryStats();
                
                const card1 = flippedCards[0];
                const card2 = flippedCards[1];
                
                // Check if cards match (same id, different types)
                if (card1.card.id === card2.card.id && card1.card.type !== card2.card.type) {
                    // Match found
                    memoryCards[card1.index].matched = true;
                    memoryCards[card2.index].matched = true;
                    matchedPairs++;
                    
                    document.querySelector(`.memory-card[data-index="${card1.index}"]`).classList.add('matched');
                    document.querySelector(`.memory-card[data-index="${card2.index}"]`).classList.add('matched');
                    
                    flippedCards = [];
                    
                    // Check if game is complete
                    if (matchedPairs === 8) {
                        setTimeout(finishMemoryGame, 500);
                    }
                } else {
                    // No match, flip back after delay
                    setTimeout(() => {
                        document.querySelector(`.memory-card[data-index="${card1.index}"]`).classList.remove('flipped');
                        document.querySelector(`.memory-card[data-index="${card2.index}"]`).classList.remove('flipped');
                        flippedCards = [];
                    }, 1000);
                }
            }
        }

        function updateMemoryStats() {
            document.getElementById('memory-progress-text').textContent = `${matchedPairs}/8`;
            document.getElementById('memory-moves').textContent = memoryMoves;
        }

        function finishMemoryGame() {
            // Calculate rewards based on moves (fewer moves = better reward)
            const maxMoves = 24; // Theoretical maximum for 8 pairs
            const efficiency = Math.max(0, (maxMoves - memoryMoves) / maxMoves);
            const coinsReward = Math.max(15, Math.floor(30 * efficiency));
            const xpReward = Math.max(25, Math.floor(50 * efficiency));
            
            // Update UI
            document.getElementById('memory-final-score').textContent = `${Math.round(efficiency * 100)}%`;
            document.getElementById('memory-coins-reward').textContent = `+${coinsReward}`;
            document.getElementById('memory-xp-reward').textContent = `+${xpReward}`;
            
            // Show results
            document.getElementById('memory-results').classList.add('active');
            
            // Update user progress
            if (!user.progress[currentCategory]) {
                user.progress[currentCategory] = {};
            }
            user.progress[currentCategory].memory = {
                completed: true,
                moves: memoryMoves,
                efficiency: Math.round(efficiency * 100)
            };
            
            // Add rewards
            addReward(coinsReward, xpReward);
            
            // Show confetti for good efficiency
            if (efficiency >= 0.7) {
                showConfetti();
            }
        }

        // ===============================
        // QUIZ GAME
        // ===============================

        let quizQuestions = [];
        let currentQuestion = 0;
        let quizCorrect = 0;
        let quizIncorrect = 0;

        function initializeQuizGame() {
            document.getElementById('quiz-results').classList.remove('active');
            document.getElementById('quiz-next').disabled = true;
            
            // Set category title
            document.getElementById('quiz-category-title').textContent = `Quiz - ${currentCategory}`;
            
            // Reset stats
            currentQuestion = 0;
            quizCorrect = 0;
            quizIncorrect = 0;
            
            // Create quiz questions
            quizQuestions = [];
            const vocabulary = categories[currentCategory].vocabulary;
            
            vocabulary.forEach(item => {
                // Create question with correct answer and 3 distractors
                const question = {
                    term: item.term,
                    correct: item.definition,
                    options: [item.definition]
                };
                
                // Add 3 random definitions from other terms as distractors
                const otherDefinitions = vocabulary
                    .filter(v => v.term !== item.term)
                    .map(v => v.definition);
                
                const shuffledDefinitions = shuffleArray([...otherDefinitions]);
                question.options.push(...shuffledDefinitions.slice(0, 3));
                
                // Shuffle options
                question.options = shuffleArray(question.options);
                
                quizQuestions.push(question);
            });
            
            // Shuffle questions
            quizQuestions = shuffleArray(quizQuestions);
            
            // Load first question
            loadQuizQuestion();
            updateQuizStats();
        }

        function loadQuizQuestion() {
            const question = quizQuestions[currentQuestion];
            
            document.getElementById('quiz-question').textContent = `Was bedeutet "${question.term}"?`;
            document.getElementById('quiz-current').textContent = currentQuestion + 1;
            document.getElementById('quiz-total').textContent = quizQuestions.length;
            
            const optionsContainer = document.getElementById('quiz-options');
            optionsContainer.innerHTML = '';
            
            question.options.forEach((option, index) => {
                const optionElement = document.createElement('div');
                optionElement.className = 'quiz-option';
                optionElement.innerHTML = `
                    <div class="option-indicator">${String.fromCharCode(65 + index)}</div>
                    <div class="option-text">${option}</div>
                `;
                
                optionElement.addEventListener('click', () => selectQuizOption(index, option === question.correct));
                optionsContainer.appendChild(optionElement);
            });
            
            document.getElementById('quiz-feedback').style.display = 'none';
            document.getElementById('quiz-next').disabled = true;
        }

        function selectQuizOption(optionIndex, isCorrect) {
            const options = document.querySelectorAll('.quiz-option');
            const feedback = document.getElementById('quiz-feedback');
            
            // Disable all options
            options.forEach(option => {
                option.style.pointerEvents = 'none';
            });
            
            // Mark correct/incorrect
            if (isCorrect) {
                options[optionIndex].classList.add('correct');
                quizCorrect++;
                feedback.textContent = 'Richtig! Gut gemacht.';
                feedback.className = 'quiz-feedback correct';
            } else {
                options[optionIndex].classList.add('incorrect');
                quizIncorrect++;
                
                // Find and highlight correct answer
                const correctIndex = quizQuestions[currentQuestion].options.findIndex(
                    option => option === quizQuestions[currentQuestion].correct
                );
                options[correctIndex].classList.add('correct');
                
                feedback.textContent = `Leider falsch. Die richtige Antwort ist: ${quizQuestions[currentQuestion].correct}`;
                feedback.className = 'quiz-feedback incorrect';
            }
            
            feedback.style.display = 'block';
            document.getElementById('quiz-next').disabled = false;
            updateQuizStats();
        }

        function updateQuizStats() {
            document.getElementById('quiz-correct').textContent = quizCorrect;
            document.getElementById('quiz-incorrect').textContent = quizIncorrect;
        }

        function nextQuizQuestion() {
            currentQuestion++;
            
            if (currentQuestion < quizQuestions.length) {
                loadQuizQuestion();
            } else {
                finishQuiz();
            }
        }

        function finishQuiz() {
            // Calculate score and rewards
            const score = Math.round((quizCorrect / quizQuestions.length) * 100);
            const coinsReward = Math.max(15, Math.floor(score / 10) * 2);
            const xpReward = Math.max(30, Math.floor(score / 5) * 2);
            
            // Update UI
            document.getElementById('quiz-final-score').textContent = `${score}%`;
            document.getElementById('quiz-final-score').className = `result-score ${
                score >= 80 ? 'good' : score >= 60 ? 'average' : 'poor'
            }`;
            document.getElementById('quiz-coins-reward').textContent = `+${coinsReward}`;
            document.getElementById('quiz-xp-reward').textContent = `+${xpReward}`;
            
            // Show results
            document.getElementById('quiz-results').classList.add('active');
            
            // Update user progress
            if (!user.progress[currentCategory]) {
                user.progress[currentCategory] = {};
            }
            user.progress[currentCategory].quiz = {
                completed: true,
                correct: quizCorrect,
                total: quizQuestions.length,
                score: score
            };
            
            // Add rewards
            addReward(coinsReward, xpReward);
            
            // Show confetti for good scores
            if (score >= 80) {
                showConfetti();
            }
        }

        // ===============================
        // INITIALIZATION
        // ===============================

        document.addEventListener('DOMContentLoaded', function() {
            initializeDashboard();
            
            // Set up quiz next button
            document.getElementById('quiz-next').addEventListener('click', nextQuizQuestion);
        });
    </script>
</body>
</html>
